
<% if @preference.song_sort_order == "ASC" %>
  <% @songs.sort_by! {|x, y| x.name <=> y.name} %>

<% else %>
  <% @songs.sort %>
<% end %>

<ul>
<% @songs.each do |song| %>
  <li><%= display_artist(song) %> - <%= link_to song.title, song_path(song) %></li>
<% end %>
</ul>
<br>
<%= link_to "Add New Song", new_song_path %>
